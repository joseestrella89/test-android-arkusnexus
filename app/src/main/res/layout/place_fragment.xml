<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            class="com.google.android.gms.maps.SupportMapFragment"
            tools:context="com.jose.figo.FragmentPlaces.Views.PlaceFragment"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="220dp"
        android:orientation="vertical"
        android:layout_margin="15dp"
        style="@style/ContainerDescriptionItemPlace">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_place"
                    style="@style/TitlePlaceView"/>
                <RatingBar
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rating_place"
                    android:theme="@style/RatingBar"
                    style="@style/SmallRatingBar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/address_place_one"
                    style="@style/AddressPlaceView"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/address_place_two"
                    style="@style/AddressPlaceView"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/distance"
                style="@style/DistancePlaceView"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/icons8routefilled"
                style="@style/IconAction"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                style="@style/ContainerActionDescription">
                <TextView
                    android:text="@string/action_directions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ActionTitle"/>
                <TextView
                    android:id="@+id/description_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ActionDescription"/>
            </LinearLayout>
            <ImageView
                android:src="@mipmap/baseline_keyboard_arrow_right_black_24"
                style="@style/IconActionGo"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/celliconsphone"
                style="@style/IconAction"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                style="@style/ContainerActionDescription">
                <TextView
                    android:text="@string/action_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ActionTitle"/>
                <TextView
                    android:id="@+id/description_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ActionDescription"/>
            </LinearLayout>
            <ImageView
                android:src="@mipmap/baseline_keyboard_arrow_right_black_24"
                style="@style/IconActionGo"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/celliconswebsite"
                style="@style/IconAction"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                style="@style/ContainerActionDescription">
                <TextView
                    android:text="@string/action_visit_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ActionTitle"/>
                <TextView
                    android:id="@+id/description_visit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ActionDescription"/>
            </LinearLayout>
            <ImageView
                android:src="@mipmap/baseline_keyboard_arrow_right_black_24"
                style="@style/IconActionGo"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>